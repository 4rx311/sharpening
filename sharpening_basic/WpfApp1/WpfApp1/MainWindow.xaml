<Window x:Class="Stopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid Background="#FF4D6082">
        <Button Content="Start" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Width="180" Height="130" Click="StartButtonClicked" RenderTransformOrigin="0.5,0.5" Background="#FF20EC20"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="180" Height="59" Click="StopButtonClicked" Background="#FFE0452C"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="195,198,0,0" VerticalAlignment="Top" Width="180" Height="130" Click="ResetButtonClicked" Background="#FFC2C3C9"/>
        <Label  x:Name = "timeLabel" FontSize="60" Content="00:00,00"  HorizontalAlignment="Left" Height="115" Margin="71,78,0,0" VerticalAlignment="Top" Width="246"/>

    </Grid>
</Window>
